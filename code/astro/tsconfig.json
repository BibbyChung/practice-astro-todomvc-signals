{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/lib/*": [
        "src/lib/*"
      ],
      "~/layouts/*": [
        "src/layouts/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    ".eslintrc.cjs",
    "*.cjs",
    "*.mjs",
    "*.ts",
    "*.js",
    "src/**/*.d.ts",
    "src/**/*.svelte",
    "src/**/*.astro",
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}