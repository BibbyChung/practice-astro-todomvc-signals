{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/lib/*": [
        "src/lib/*"
      ],
      "~/layouts/*": [
        "src/layouts/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "./*.cjs",
    "./*.mjs",
    "./*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.svelte",
    "./src/**/*.astro",
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}